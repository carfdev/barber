---
import { Image } from "astro:assets";

interface Props {
  clientName: string;
  clientAvatar: string;
  reviewText: string;
}

const { clientName, clientAvatar, reviewText } = Astro.props;
---

<div
  class="bg-brand-dark-secondary rounded-lg p-6"
  style="opacity: 1; transform: translateY(0px); transition: opacity 0.6s, transform 0.6s;"
>
  <div class="mb-4 flex items-center">
    <Image
      loading="lazy"
      decoding="async"
      inferSize
      src={clientAvatar}
      alt="Client Avatar"
      class="mr-4 h-12 w-12 rounded-full"
    />
    <div>
      <h4 class="font-montserrat font-semibold text-white">{clientName}</h4>
      <div class="text-brand-gold flex text-sm">
        {
          Array.from({ length: 5 }).map(() => (
            <svg
              class="text-brand-gold mr-1 h-4 w-4"
              aria-hidden="true"
              focusable="false"
              data-prefix="fas"
              data-icon="star"
              role="img"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 576 512"
            >
              <path
                fill="currentColor"
                d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z"
              />
            </svg>
          ))
        }
      </div>
    </div>
  </div>
  <div class="text-brand-gold mb-4 flex justify-center text-3xl">
    <i data-fa-i2svg=""
      ><svg
        class="text-brand-gold h-6 w-6"
        aria-hidden="true"
        focusable="false"
        data-prefix="fas"
        data-icon="quote-left"
        role="img"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 448 512"
        data-fa-i2svg=""
        ><path
          fill="currentColor"
          d="M0 216C0 149.7 53.7 96 120 96h8c17.7 0 32 14.3 32 32s-14.3 32-32 32h-8c-30.9 0-56 25.1-56 56v8h64c35.3 0 64 28.7 64 64v64c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V320 288 216zm256 0c0-66.3 53.7-120 120-120h8c17.7 0 32 14.3 32 32s-14.3 32-32 32h-8c-30.9 0-56 25.1-56 56v8h64c35.3 0 64 28.7 64 64v64c0 35.3-28.7 64-64 64H320c-35.3 0-64-28.7-64-64V320 288 216z"
        ></path></svg
      ></i
    >
  </div>
  <p class="text-brand-light-gray text-center italic">
    "{reviewText}"
  </p>
</div>
